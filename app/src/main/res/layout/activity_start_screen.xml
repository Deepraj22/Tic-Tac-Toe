<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartScreenActivity">

    <ImageView
        android:id="@+id/start_screen_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/start_screen_background" />

    <ImageView
        android:id="@+id/start_screen_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/start_screen_background"
        app:layout_constraintVertical_bias="0.276"
        app:srcCompat="@drawable/start_screen_logo" />

    <TextView
        android:id="@+id/start_screen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="@string/tic_tac_toe"
        android:textColor="@color/green"
        android:textSize="34sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/start_screen_logo"
        app:layout_constraintStart_toStartOf="@+id/start_screen_logo"
        app:layout_constraintTop_toBottomOf="@+id/start_screen_logo" />

    <Button
        android:id="@+id/start_screen_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/aclonica"
        android:text="@string/start"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="@+id/start_screen_text"
        app:layout_constraintStart_toStartOf="@+id/start_screen_text"
        app:layout_constraintTop_toBottomOf="@+id/start_screen_text" />

</androidx.constraintlayout.widget.ConstraintLayout>